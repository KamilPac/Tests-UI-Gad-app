{
  "name": "gad-app-ui-tests",
  "version": "1.0.0",
  "description": "UI tests for Articles page (Gad App) - localhost:3000/articles.html",
  "scripts": {
    "test": "playwright test",
    "test:smoke": "playwright test --grep @smoke",
    "test:e2e": "playwright test --grep @e2e",
    "test:visual": "playwright test tests/visual --update-snapshots",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  }
}
